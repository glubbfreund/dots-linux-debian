#!/bin/bash
# ~/.local/bin/synccalendar

export DISPLAY=:0
export XAUTHORITY=/home/oli/.Xauthority
export DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1000/bus
XDG_RUNTIME_DIR=/run/user/1000
PULSE_SERVER=unix:/run/user/1000/pulse/native

wget -O /home/oli/.local/share/calendar.ics 'https://app.klender.nl/b/ics/LeisPresl-df0f1c8b01ad89e5073d873837ee9315d0d74b42469ac2944a760b9dadff44b3.ics' ||
    { notify-send "Kalenderimport fehlgeschlagen." --icon=calendar; paplay /usr/share/sounds/freedesktop/stereo/dialog-warning.oga; }
